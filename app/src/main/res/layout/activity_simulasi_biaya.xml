<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sarah.labp2komp8.wonderfulsumbar.SimulasiBiaya">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hitung Simulasi"
        android:id="@+id/labelTujuan"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tujuan"
       android:text="Tujuan"
        android:layout_below="@+id/labelTujuan"/>
    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spTujuan"
        android:layout_below="@+id/tujuan"></Spinner>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/trans"
        android:text="Transportasi"
        android:layout_below="@+id/spTujuan"/>
    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spTrans"
        android:layout_below="@+id/trans"></Spinner>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hari"
        android:text="Jumlah Hari"
        android:layout_below="@+id/spTrans"/>
    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spHari"
        android:layout_below="@+id/hari"></Spinner>

    <Button
        android:id="@+id/btn_hitung"
        android:layout_below="@+id/spHari"
        android:text="HITUNG BIAYA"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />

</RelativeLayout>
