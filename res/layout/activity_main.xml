<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
   android:background="@color/putih"
    tools:context=".MainActivity" >
    
    <ImageView 
        android:id="@+id/gambar1"
        android:src="@drawable/kabau"
        android:layout_width="fill_parent"
        android:layout_height="180dp"/>

    <ImageButton
        android:id="@+id/btnWisata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt1"
        android:layout_toRightOf="@+id/btnSumbar"
        android:src="@drawable/logo2" />
    <ImageButton
        android:id="@+id/btnList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnWisata"
        android:layout_toRightOf="@+id/btnWisata"
        android:src="@drawable/logo3" />
    
      <ImageButton
        android:id="@+id/btnJajanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt1"
        android:layout_below="@+id/txt1"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo4" />
    
    <ImageButton
        android:id="@+id/btnTrans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btnJajanan"
        android:layout_alignTop="@+id/btnJajanan"
        android:src="@drawable/logo5" />
    
     <ImageButton
        android:id="@+id/btnKeluar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btnTrans"
        android:layout_alignTop="@+id/btnTrans"
        android:src="@drawable/logo6" />
     
  
    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnSumbar"
        android:layout_below="@+id/btnSumbar"
        android:text="Info Sumbar"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt2"
        android:layout_alignBottom="@+id/txt2"
        android:layout_alignLeft="@+id/btnList"
        android:text="    Destinasi"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt4"
        android:layout_alignBottom="@+id/txt4"
        android:layout_alignRight="@+id/txt3"
        android:layout_marginRight="15dp"
        android:text="About"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt2"
        android:layout_below="@+id/btnTrans"
        android:text=" Transportasi"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnJajanan"
        android:layout_toRightOf="@+id/btnSumbar"
        android:text="Wisata Unggul"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt4"
        android:layout_alignBottom="@+id/txt4"
        android:layout_alignParentLeft="true"
        android:text="Kuliner Khas"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btnSumbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/gambar1"
        android:src="@drawable/logo1" />
   
</RelativeLayout>